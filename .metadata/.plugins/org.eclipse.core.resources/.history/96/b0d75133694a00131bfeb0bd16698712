        <scripting:component doc:name="Groovy">
            <scripting:script engine="Groovy"><![CDATA[dirName = "/Users/Reuter/tmp/pictures"
new File(dirName).eachFile() {  
	def newName = (it.name ~= /.jpg/).replaceFirst("infocom.jpg")
	File f = new File(dirName + "/" + newName) 
	it.renameTo(f)
	println it.name + "->" + f.name
}]]></scripting:script>
        </scripting:component>
